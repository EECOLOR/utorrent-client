<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:assets="fly.uTorrent.ui.assets.*" xmlns:ui="fly.uTorrent.ui.*">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<s:HGroup right="0">
		<assets:MinimizeButton id="minimizeBtn" />
		<assets:CloseButton id="closeBtn" />
	</s:HGroup>
	<assets:HRule width="100%" />
	<s:HGroup width="100%">
		<s:HGroup width="100%" styleName="uTorrentButtonBox">
			<assets:AddButton id="addBtn" />
			<assets:RemoveButton id="removeBtn" />
			<assets:StartButton id="startBtn" />
			<assets:PauseButton id="pauseBtn" />
			<assets:StopButton id="stopBtn" />
		</s:HGroup>
		<assets:SettingsButton id="settingsBtn"  />
	</s:HGroup>
	<assets:HRule width="100%" />
	<s:List id="torrentList" itemRenderer="fly.uTorrent.ui.renderers.TorrentRenderer" 
			allowMultipleSelection="true" 
			width="100%" height="100%"
			 />
	<assets:HRule width="100%" />
	<s:HGroup right="0" verticalAlign="middle">
		<s:Label id="downTxt" width="80" textAlign="right" />
		<s:BitmapImage id="downImg" />
		<s:Label id="upTxt" width="80" textAlign="right" />
		<s:BitmapImage id="upImg" />
	</s:HGroup>
</s:Skin>
